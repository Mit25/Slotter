<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#2c3c53"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_margin="16dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <TextView
                android:id="@+id/enameauth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Event Name"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName"/>

            <TextView
                android:id="@+id/ecreatorauth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Event Creator"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName"/>

            <TextView
                android:id="@+id/eventDescriptionauth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Description"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_marginBottom="16dp"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/ecodeauth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Event Code"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName"/>

            <TextView
                android:id="@+id/startDateauth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="Start Date"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName"/>

            <TextView
                android:id="@+id/endDateauth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:hint="End Date"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:inputType="textPersonName"/>


            <Button
                android:id="@+id/btn_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#009a9a"
                android:textColor="#ffffff"
                android:layout_marginBottom="24dp"
                android:onClick="auth"
                android:text="Authorise Slot"/>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>